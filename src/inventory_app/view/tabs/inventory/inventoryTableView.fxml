<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inventory_app.view.tabs.inventory.InventoryTableController">
   <children>
      <HBox prefHeight="472.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="5.0">
                     <children>
                        <Button fx:id="addBorrowButton" mnemonicParsing="false" onAction="#openAddBorrowView" style="-fx-background-color: #05D39B;" text="+" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </Button>
                        <TextField promptText="Search">
                           <HBox.margin>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </HBox.margin>
                        </TextField>
                        <ComboBox promptText="Condition" />
                        <ComboBox promptText="Is Borrowed" />
                        <ComboBox promptText="Location" />
                        <Region HBox.hgrow="ALWAYS" />
                        <CheckBox mnemonicParsing="false" text="Only display late" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin></CheckBox>
                     </children>
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </HBox>
                  <TableView fx:id="equipmentTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="idItemColumn" prefWidth="75.0" text="Id" />
                      <TableColumn prefWidth="75.0" text="Item">
                           <columns>
                              <TableColumn fx:id="itemTypeColumn" prefWidth="75.0" text="Type" />
                              <TableColumn fx:id="itemNameColumn" prefWidth="75.0" text="Name" />
                           </columns>
                        </TableColumn>
                        <TableColumn fx:id="itemBrandColumn" prefWidth="75.0" text="Brand" />
                        <TableColumn fx:id="itemOwnerColumn" prefWidth="75.0" text="Owner" />
                        <TableColumn fx:id="itemConditionColumn" prefWidth="75.0" text="Condition" />
                        <TableColumn prefWidth="75.0" text="Borrowed">
                           <columns>
                              <TableColumn fx:id="itemBorrowerColumn" prefWidth="75.0" text="Borrower" />
                              <TableColumn fx:id="borrowReasonColumn" prefWidth="75.0" text="Reason" />
                           </columns>
                        </TableColumn>
                        <TableColumn fx:id="returnDateColumn" prefWidth="75.0" text="Return Date" />
                        <TableColumn fx:id="locationColumn" prefWidth="75.0" text="Location" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox>
                     <children>
                        <Label fx:id="totalCountLabel" text="Total count:" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font></Label>
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <ComboBox fx:id="typeFilterCombo" promptText="Item Type" />
                  <VBox fx:id="specificFilterVBox" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </VBox>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
